#include <iostream>
#include <fstream>
#include <time.h>
#include <bits/stdc++.h>
#include <cstdlib>
using namespace std;

void timeframe(double second){
    time_t starttime=time(0);
    while(true){
    time_t endtime=time(0);
    if (difftime(endtime,starttime)>=second){
      break;
    }
    }
}

int main ()  {
ifstream regispicture("regis.txt");
bool match=false;
