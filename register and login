while(input!="R"&&input!="L"){
    cout<<"Invalid error"<<endl<<"Enter [R] to Register a account"<<endl<<"Enter [L] to login a account"<<endl;
    cin>>input;
}
if(input=="R"){
    for(int i=0;i<8;i++){
            getline(regispicture,output);
            cout<<output<<endl;
        }
        cout<<"Enter your username"<<endl;
        cin>>input;
}
cout<<input;


return 0;

}



